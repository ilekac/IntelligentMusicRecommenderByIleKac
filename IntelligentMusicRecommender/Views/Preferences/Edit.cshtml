@model IntelligentMusicRecommender.Models.UserPreference
@{
    ViewData["Title"] = "Preferences";
}
<h2>Preferences</h2>
<p class="text-muted">Save your defaults. The “Use my defaults” button on Home will auto-fill the form.</p>

<form asp-action="Edit" method="post" class="row g-2">
    <div class="col-md-4">
        <label class="form-label">Username</label>
        <input asp-for="Username" class="form-control" placeholder="IleKac" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Favorite Genre</label>
        <input asp-for="FavoriteGenre" class="form-control" placeholder="pop, rock, edm..." />
    </div>
    <div class="col-md-4">
        <label class="form-label">Mood Keywords (comma-separated)</label>
        <input asp-for="MoodKeywords" class="form-control" placeholder="happy, focus, gym" />
    </div>

    <div class="col-12 mt-2">
        <button class="btn btn-primary">Save</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary ms-2">Back to Home</a>
    </div>
</form>