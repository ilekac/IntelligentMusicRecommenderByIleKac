@model IntelligentMusicRecommender.Models.Playlist
@{
    ViewData["Title"] = Model.Name;
}
<h2>@Model.Name</h2>
<p>@Model.Criteria</p>

@if (Model.Tracks.Count == 0)
{
    <p>No tracks.</p>
}
else
{
    <ol class="list-group list-group-numbered">
        @foreach (var pt in Model.Tracks.OrderBy(t => t.Order))
        {
            <li class="list-group-item">
                <div class="d-flex align-items-center">
                    @if (!string.IsNullOrEmpty(pt.Track.ArtworkUrl))
                    {
                        <img src="@pt.Track.ArtworkUrl" alt="cover"
                             style="width:64px;height:64px;object-fit:cover;margin-right:10px;" />
                    }
                    <div class="flex-grow-1">
                        <div><strong>@pt.Track.Title</strong> – @pt.Track.Artist</div>
                        @if (!string.IsNullOrEmpty(pt.Track.PreviewUrl))
                        {
                            <audio controls src="@pt.Track.PreviewUrl"></audio>
                        }
                    </div>
                </div>
            </li>
        }
    </ol>
}

<div class="mt-3">
    <a class="btn btn-outline-secondary" asp-action="Index">Back</a>

    <form asp-action="Delete" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger"
                onclick="return confirm('Delete this playlist?');">
            Delete
        </button>
    </form>
</div>