@model IntelligentMusicRecommender.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<div class="text-center mt-5">
    <h1 class="display-5 text-danger">Something went wrong 😕</h1>
    <p class="lead">We couldn’t complete your request. Please try again in a moment.</p>

    @if (Model.ShowRequestId)
    {
        <p class="text-muted">Request ID: <code>@Model.RequestId</code></p>
    }

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Back to Home</a>
</div>